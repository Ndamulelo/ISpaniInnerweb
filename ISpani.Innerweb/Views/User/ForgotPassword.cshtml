@model string;

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}


<h1>Forgot Password</h1>

@{

}

<form method="POST" asp-action="ForgotPassword" asp-controller="User">

    @if (TempData["ForgotPassword"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["ForgotPassword"]</div>
    }

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="col-md-4 mb-3">
        <label>Email</label>
        <input type="text" name="email" class="form-control" />
    </div>


    <div class="col-md-4 mt-4">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>

    <div class="col-md-4 mt-4">
        <a asp-action="Index" asp-controller="User"> Go To SignIn</a>
    </div>
    
</form>