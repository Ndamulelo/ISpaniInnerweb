
@model JobSeekerEducationViewModelContainer;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_JobSeekerLayout.cshtml";
}

<h5 class="page-title"> Create Education</h5>
<form asp-action="Create" asp-controller="Education" method="POST" class="mb-1">
    @if (TempData["EducationCreate"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["EducationCreate"]</div>
    }
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label asp-for=" @Model.JobSeekerEducationViewModel.GraduationYear">Year Of Graduation</label>
            <input type="number" asp-for=@Model.JobSeekerEducationViewModel.GraduationYear class="form-control"
                   id="JobTitle">
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="@Model.JobSeekerEducationViewModel.Institution">Institution</label>
            <input type="text" asp-for="@Model.JobSeekerEducationViewModel.Institution" class="form-control">
        </div>

        <div class="col-md-3 mb-3 mb-3">
            <label asp-for="@Model.JobSeekerEducationViewModel.FieldOfStudy">Field Of Study</label>

            <input type="text" asp-for="@Model.JobSeekerEducationViewModel.FieldOfStudy" class="form-control"
                   max="@DateTime.Now.ToString("yyyy-MM-dd")" id="">
        </div>

        <div class="col-md-3 mb-3">
            <label asp-for="@Model.JobSeekerEducationViewModel.QualificationId">Qualificaion</label>
            <select asp-for="@Model.JobSeekerEducationViewModel.QualificationId" class="form-control" id="" asp-items="@(new SelectList(Model.Qualifications,"Id","Name"))" required>
            </select>
        </div>

        <div class="col-md-3">
            <button class="btn btn-primary form-control" type="submit">Create</button>
        </div>
    </div>

</form>

@section Scripts{

    <script src="~/js/Profile.js"></script>

}